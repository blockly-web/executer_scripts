#!/bin/bash
set -e

# Create user for the service if it doesn't exist
if ! getent passwd cli-exec > /dev/null; then
    useradd --system --no-create-home --shell /usr/sbin/nologin cli-exec
fi

# Set up systemd service
if [ -d /lib/systemd/system ]; then
    systemctl daemon-reload
    systemctl enable cli-executer.service || true
    systemctl start cli-executer.service || true
fi

exit 0 